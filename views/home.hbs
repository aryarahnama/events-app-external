{{!-- We are going to bootstrap this webpage! --}}

<ul class="text-center row row-column-3" style="list-style-type:none;">
  {{#events}}
    <li class="col" style="display:inline-block;padding:10px;">
        <div class="card" style="width:18rem;">
            <div style="width:100%;height:150px;display:table-cell;vertical-align:middle;text-align:center;overflow:hidden;">
                <img class="card-img-top" style="width:100%;object-fit:cover;" src={{ image }} alt="Card image cap">
            </div>
            <div class="card-body">
                <h5 class="card-title" style="font-weight:bold;">{{ title }}</h5>
                <p class="card-text" style="color:DarkGray; font-style:italic;">Description: {{ description }}</p>
                <p class="card-text" style="font-size:16px; font-weight:bold;">{{ location }}</p>
                <p class="card-text" style="font-size:14px; color:#538b01; font-weight:bold; font-style:italic;">Date: {{ date }}</p>
                <p class="card-text" style="font-size:14px; color:#538b01; font-weight:bold; font-style:italic;">Time: {{ stime }} - {{ etime }}</p>
                {{!-- <p class="card-text">Start Time: {{ stime }}</p>
                <p class="card-text">End Time: {{ etime }}</p> --}}
                <p class="card-text">Likes: {{ likes }}</p>
                <form method="POST" action="/event/like">
                    <input type="hidden" value="{{id}}" name="id">
                    <input type="submit" value="Like">
                </form>
                <form method="POST" action="/event/unlike">
                    <input type="hidden" value="{{id}}" name="id">
                    <input type="submit" value="Dislike">
                </form>
            </div>
        </div>
    </li>
  {{/events}}
</ul>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Create an event
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
    <div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create an event</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="card-body p-3 m-0 border-0 bd-example m-0 border-0">
                <form action="/event" method="post">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="title" class="form-control" type="text" />
                </div>
                <div class="mb-3">  
                    <label for="description" class="form-label">Description</label>
                    <input name="description" class="form-control" type="text" />
                </div>
                <div class="mb-3">  
                    <label for="location" class="form-label">Location</label>
                    <input name="location" class="form-control" type="text" />
                </div>

                <div class="mb-3">  
                    <label for="stime" class="form-label">Start Time</label>
                    <input name="stime" class="form-control" type="time" />
                </div>

                <div class="mb-3">  
                    <label for="etime" class="form-label">End Time</label>
                    <input name="etime" class="form-control" type="time" />
                </div>

                <div class="mb-3">  
                    <label for="image" class="form-label">Image Link</label>
                    <input name="image" class="form-control" type="url" />
                </div>

                <div class="mb-3">  
                    <input class="form-control" type="submit" name="submit" value="submit" />
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
    </div>
    </div>
</div>
</div>