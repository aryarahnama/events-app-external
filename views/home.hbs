{{!-- We are going to bootstrap this webpage! --}}

<ul >
  {{#events}}
    <li>
        <h2>{{ title }}</h2>
        <p>{{ description }}</p>
        <p>Location: {{ location }}</p>
        <p>Date: {{ date }}</p>
        <p>Start Time: {{ stime }}</p>
        <p>Likes: {{ likes }}
        <form method="POST" action="/event/like">
        <input type="hidden" value="{{id}}" name="id">
        <input type="submit" value="Like">
        </form>
        <form method="POST" action="/event/unlike">
        <input type="hidden" value="{{id}}" name="id">
        <input type="submit" value="Dislike">
        </form>
        </p>
    </li>
  {{/events}}
</ul>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Create an event
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
    <div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create an event</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="card-body p-3 m-0 border-0 bd-example m-0 border-0">
                <form action="/event" method="post">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="title" class="form-control" type="text" />
                </div>
                <div class="mb-3">  
                    <label for="description" class="form-label">Description</label>
                    <input name="description" class="form-control" type="text" />
                </div>
                <div class="mb-3">  
                    <label for="location" class="form-label">Location</label>
                    <input name="location" class="form-control" type="text" />
                </div>

                <div class="mb-3">  
                    <label for="stime" class="form-label">Start Time</label>
                    <input name="stime" class="form-control" type="time" />
                </div>

                <div class="mb-3">  
                    <label for="etime" class="form-label">End Time</label>
                    <input name="etime" class="form-control" type="time" />
                </div>

                <div class="mb-3">  
                    <input class="form-control" type="submit" name="submit" value="submit" />
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
    </div>
    </div>
</div>
</div>